#!/bin/sh

. $FWM_HOME/lib/menu-utils

blank_screen()
{
	# This helps to avoid unpleasant screen flickering.
	echo "xrandr --output \"$1\" --brightness 0" >> $script1_
	echo "xrandr --output \"$1\" --brightness 1" >> $script2_
}

init_scripts()
{
	echo -n > $script_
	chmod 0755 $script_

	echo -n > $script1_
	chmod 0755 $script1_

	echo -n > $script2_
	chmod 0755 $script2_
}

run_script()
{
	if [ -s $script_ ]; then
		$script1_ >/dev/null 2>&1
		$script_

		for i in 1 2 3 4 5; do
			if [ -f $tmp_/outputs-ready ]; then
				break
			fi
			sleep 1
		done

		rm -f $tmp_/outputs-ready

		# Safeguard in case fwm fails to restore display brightness.
		sleep 10
		$script2_ >/dev/null 2>&1
	fi
}

disconnect_monitor()
{
	xrandr | while read name status prim rest; do
		blank_screen $name
		case $name in
		[0-9]*|Screen|eDP*)
			continue
			;;
		esac

		echo "xrandr --output \"$name\" --off" >> $script_
	done

	run_script
}

connect_monitor()
{
	local pos='--left-of'
	local auto=0

	case $1 in
	right) pos='--right-of';;
	auto) auto=1;;
	esac

	xrandr | while read name status role rest; do
		blank_screen $name
		case $role in
		primary)
			primary=$name
			continue
			;;
		esac

		case $name in
		[0-9]*|Screen|eDP*)
			continue
			;;
		esac

		case $status in
		*disconnected*)
			continue
			;;
		esac

		if [ $auto -eq 1 ]; then
			pos="--left-of"
			auto=$((auto + 1))
		elif [ $auto -eq 2 ]; then
			pos="--right-of"
			auto=$((auto + 1))
		fi

		echo "xrandr --output \"$name\" --auto $pos \"$primary\"" >> $script_

		if [ $auto -gt 2 ]; then
			break
		fi
	done

	run_script
}

ctl_=$FWM_HOME/.control$DISPLAY
tmp_=$FWM_HOME/tmp
out_=$tmp_/menu
script_=$tmp_/randr.sh
script1_=$tmp_/blank-screen.sh
script2_=$tmp_/unblank-screen.sh

init_scripts

#printf "\a\t\n" > $out_
printf "\a\t\n" > $out_
printf "\a\tbrightness\n" >> $out_
printf "\a\tleft\n" >> $out_
printf "\a\tright\n" >> $out_
printf "\a\tauto\n" >> $out_
printf "\a\tdisconnect\n" >> $out_

startmenu -b -d $out_ | while read icon item; do
	case $item in
	"brightness"*) exec brightness-menu &;;
	"left"*) connect_monitor left;;
	"right"*) connect_monitor right;;
	"auto"*) connect_monitor auto;;
	"disconnect"*) disconnect_monitor;;
	esac
done
