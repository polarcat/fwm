#!/bin/sh

force_=0
fwm_=$HOME/.fwm
keys_=$fwm_/keys
ctl_=$fwm_/.control$DISPLAY
ifs_=$IFS

help()
{
	local app=$(basename $0)

	printf "$app <options>\nOptions:\n  -f|--force  override existing keys\n"
	exit 0
}

install_bin()
{ # $1:cmd
	cp -v tools/$1 $fwm_/bin/
	chmod 0755 $fwm_/bin/$1
}

install_pos()
{ # $1:cmd $2:pos
	if [ $# -ne 2 ]; then return; fi
	mkdir -p $fwm_/$2
	touch $fwm_/$2/$1
}

install_pop()
{ # $1:cmd
	mkdir -p $fwm_/popup
	touch $fwm_/popup/$1
}

install_key()
{ # $1:cmd $2:key
	if [ $# -ne 2 ]; then return; fi
	if [ $force_ -eq 0 ] && [ -f $keys_/$2 ]; then
		printf "key \033[0;32m$2\033[0m already defined\n"
		printf "run with -f parameter to override\n"
		return
	fi

	printf "#!/bin/sh\nexec $1 &\n" > $keys_/$2
	chmod 0755 $keys_/$2
	echo "updated key $keys_/$2"
}

mkdir -p $fwm_/panel
cp -v tools/main-menu $fwm_/panel/menu
chmod 0755 $fwm_/panel/menu

dock_=screens/0/dock

# config: <key>:<pos>:<cmd>

config_="
mod_m:center:main-menu
mod_e:center:tag-menu
mod_k:center:keys-menu
mod_l:center:clients-menu
mod_o:center:screens-menu
mod_p:center:apps-menu
mod_r:center:run-menu
mod_v:center:clip-menu
:center:display-menu
:center:brightness-menu
:center:randr-menu
:center:suspend-menu
:center:restart-menu
:center:wlan-menu
:center:lan-menu
:center:mixer-menu
:center:bat-info
dock:$dock_/left-gravity:display-dock
dock:$dock_/left-gravity:wlan-dock
dock:$dock_/left-gravity:lan-dock
dock:$dock_/left-gravity:clock-dock
dock:$dock_/left-gravity:mixer-dock
dock:$dock_/left-gravity:ac-dock
dock:$dock_:bat-dock
dock:$dock_:clock-dock
dock:$dock_:cpu-dock
"

case $1 in
-h|--help) help;;
-f|--force) force_=1;;
esac

mkdir -p $fwm_/bin
mkdir -p $fwm_/lib
mkdir -p $keys_

cp -v tools/menu-utils $fwm_/lib

parse() { key_="$1"; pos_="$2"; shift 2; cmd_="$@"; }

for item in $config_; do
	key_=''
	pos_=''
	cmd_=''

	IFS=':'; parse $item; IFS=$ifs_

	if [ -z "$cmd_" ]; then
		continue
	fi

	install_bin $cmd_
	install_pos $cmd_ $pos_

	if [ "$key_" != "dock" ]; then
		install_pop $cmd_ # ignore toolbox
		install_key $cmd_ $key_
	fi
done

# special cases

touch $fwm_/center/menu # default for all menus
touch $fwm_/popup/menu # default for all menus
touch $fwm_/popup/popup # default for all popups

pwd_=$PWD
cd $fwm_/$dock_
ln -sf clock-dock right-anchor
ln -sf bat-dock left-anchor
cd $pwd_

if pidof fwm && [ -p $ctl_ ]; then
	echo "reload-keys" > $ctl_
fi
