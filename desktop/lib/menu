#!/bin/bash

. $base_/head "$1"

list="home:home"
list+="|apps:apps"
list+="|wincfg:wins"
list+="|scrcfg:screens"
list+="|tagcfg:tags"
list+="|netcfg:network"

echo '</head>
<body>
<header>
<div class=menu>
<table class=blank>
<tr>'
if [ "$2" = "home" ]; then
	style='style=color:#444;'
fi
echo "<td class=blank>
<a class=home $style href=cgi?home>&nbsp;&#xf015;&nbsp;</a>
</td>
<td>
<ul class=menu>"
if [ $# -eq 2 ]; then
	ifs="$IFS"
	IFS='|'
	for item in $list; do
		tag=$(getvar_ ':' $item)
		val=$(getval_ ':' $item)
		if [ "$tag" = "home" ]; then
			continue
		fi
		if [ "$2" = "$tag" -a "$tag" != "home" ]; then
			style='style="'
			style+='color:#000;'
			style+='border-bottom:1px solid #000;'
			style+='"'
		else
			style='style="border:1px solid transparent;"'
		fi
		echo "<li class=menu><a $style href=cgi?$tag>$val</a></li>"
	done
	IFS="$ifs"
fi
echo '</ul>
</td>
</tr>
</table>
</div>
</header><div style=margin:8px>'
